<script>
    // Event listener for form submission
    document.getElementById('signup-form').addEventListener('submit', function(event) {
        event.preventDefault(); // Prevents default form submission behavior

        // Collecting form data into an object
        const formData = {
            firstName: document.getElementById('firstName').value,
            lastName: document.getElementById('lastName').value,
            email: document.getElementById('email').value,
            password: document.getElementById('password').value,
            university: document.getElementById('university').value,
            nationality: document.getElementById('nationality').value,
        };

        // Sending form data to the server via fetch
        fetch('/signup', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json' // Setting JSON content type
            },
            body: JSON.stringify(formData) // Converting formData object to JSON string
        })
        .then(response => response.json()) // Parsing the JSON response
        .then(data => {
            if (data.error) {
                alert('Error: ' + data.error); // Alerting user if there's an error returned by server
            } else {
                alert('User successfully registered!'); // Alerting user on successful registration
            }
        })
        .catch(error => {
            console.error('Error:', error); // Logging any errors that occur during the fetch request
        });
    });
</script>

